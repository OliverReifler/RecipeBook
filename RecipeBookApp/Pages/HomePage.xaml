<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pages="clr-namespace:RecipeBookApp.Pages"
             x:Class="RecipeBookApp.Pages.HomePage"
             Title="Home"
             xmlns:viewmodel="clr-namespace:RecipeBookApp.ViewModel"
             x:DataType="viewmodel:HomeViewModel">

    <VerticalStackLayout
        Padding="10"
        Spacing="10">
        <Button
            Text="Go to onboarding screen"
            Command="{Binding GoToOnboardingCommand}" />
        <Image Source="recipes_chefhat.png" />
        <Label Text="Welcome tot the Recipe Book App"
               HeightRequest="300" />
        <Button
            Text="Go to previous"
            Command="{Binding GoToPreviousCommand}" />
    </VerticalStackLayout>
</ContentPage>